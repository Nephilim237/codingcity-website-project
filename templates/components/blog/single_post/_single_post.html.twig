<div class="single-post row">
    <div class="col-lg-12">
        <div class="feature-img">
            <img class="img-fluid" src="{{ asset('uploads/images/posts/banner/' ~ post.thumbnail.imageName) | imagine_filter
                ('single_post') }}" alt="{{ post.title }}">
        </div>
    </div>
    <div class="col-lg-3  col-md-3">
        {% include 'components/blog/_categories_blog_meta.html.twig' with {
            post: post
        } %}
    </div>
    <div class="col-lg-9 col-md-9 blog_details">
        <h2>{{ post.title }}</h2>
        <p class="mb-2">{{ post.content | raw }}</p>
    </div>
</div>